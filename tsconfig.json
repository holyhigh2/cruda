{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ES2020",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "resolveJsonModule":true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "strictNullChecks": true,
        "disableSizeLimit":true,
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}